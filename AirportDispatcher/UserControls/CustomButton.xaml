<UserControl x:Class="AirportDispatcher.UserControls.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AirportDispatcher.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="ThisButton" Content="{Binding Text}" BorderThickness="0" MouseEnter="ThisButton_MouseEnter" MouseLeave="ThisButton_MouseLeave"/>
    </Grid>
</UserControl>
