<Page x:Class="AirportDispatcher.View.Pages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcher.View.Pages" xmlns:usercontrols="clr-namespace:AirportDispatcher.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage">

    <Grid>
        <StackPanel Margin="0 10 0 0">
            <usercontrols:CustomTextBox Width="180" 
                                        Text="Введите логин"/>
            <usercontrols:CustomTextBox Width="180" 
                                        Text="Введите пароль" 
                                        Margin="0 20 0 0" 
                                        TextType="Password"/>
        </StackPanel>
    </Grid>
</Page>
